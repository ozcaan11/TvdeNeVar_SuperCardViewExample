<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_detail_ac_br"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5c5c5c"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView_logo_nitv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/textView_program_name_nitv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView_logo_nitv"
                android:maxLines="1"
                android:textColor="#fff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView_category_nitv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_logo_nitv"
                android:layout_marginStart="10dp"
                android:textColor="#a9a300"
                android:layout_toEndOf="@+id/imageView_logo_nitv"
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_time_nitv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView_category_nitv"
                android:layout_marginEnd="5dp"
                android:maxLines="1"
                android:textAlignment="gravity"
                android:textSize="12sp"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>