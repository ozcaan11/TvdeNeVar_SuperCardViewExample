<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_now_in_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView_logo_nitv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/textView_program_name_nitv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView_logo_nitv"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView_category_nitv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_logo_nitv"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView_logo_nitv"
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_time_nitv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView_category_nitv"
                android:layout_marginEnd="5dp"
                android:maxLines="1"
                android:textAlignment="gravity"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_channel_name_nitv"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:layout_alignBaseline="@+id/textView_category_nitv"
                android:layout_alignBottom="@+id/textView_category_nitv"
                android:layout_alignParentStart="true"
                android:textSize="8sp"
                android:background="#848484"
                android:textColor="#fff"
                android:textAlignment="center" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>