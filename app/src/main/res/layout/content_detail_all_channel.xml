<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail_all_channel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="semiworld.org.televizyondanevar.Activity.DetailAllChannelActivity"
    tools:showIn="@layout/activity_detail_all_channel">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView_detail_all_channels_logo"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_detail_all_channels_logo"
        android:id="@+id/textView_detail_all_channels_name"
        android:layout_margin="5dp"
        android:minLines="1"
        android:textColor="#c6454a"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:background="#6e6e6e"
        android:id="@+id/recycleView_detail_all_channels"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageView_detail_all_channels_logo"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_marginTop="10dp" />
</RelativeLayout>
