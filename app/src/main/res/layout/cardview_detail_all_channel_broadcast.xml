<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="2sp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_detail_ac_broadcast"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_dac_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1sp"
                android:layout_marginTop="30sp"
                android:text="99:99"
                android:textColor="#fffc98"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView_dac_photo"
                android:layout_width="100dp"
                android:layout_marginEnd="3sp"
                android:layout_marginStart="3sp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView_dac_time" />

            <TextView
                android:id="@+id/textView_dac_name"
                android:textAlignment="center"
                android:textColor="#fff"
                android:layout_marginStart="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView_dac_photo"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_dac_name"
                android:layout_toEndOf="@+id/imageView_dac_photo"
                android:text=" " />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView18"
                android:layout_toEndOf="@+id/imageView_dac_photo"
                android:text=" " />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView19"
                android:layout_toEndOf="@+id/imageView_dac_photo"
                android:text=" " />

            <TextView
                android:id="@+id/textView_dac_long_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_dac_name"
                android:layout_toEndOf="@+id/textView19"
                android:maxLines="1"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView_dac_category"
                android:layout_width="match_parent"
                android:textColor="#4baf54"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_dac_long_time"
                android:layout_toEndOf="@+id/textView19"
                android:maxLines="1"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView_dac_summary"
                android:layout_width="match_parent"
                android:textColor="#969696"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:layout_below="@+id/textView_dac_category"
                android:maxLines="2"
                android:layout_toEndOf="@+id/textView19"
                android:textSize="12sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>